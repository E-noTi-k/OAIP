<?xml version="1.0" encoding="UTF-8"?>
<xplainskin name="Slide Thumbnails" description="Skin with slide thumbnails for navigation. Works best for Xplains with up to 10 slides.">
	<variables>
		<var type="cdata"   name="DOCTYPE" />
		<var type="data"    name="TITLE" />
		<var type="data"    name="DESCRIPTION" />
		<var type="cdata"   name="OPENGRAPH" />
		<var type="data"    name="FAVICON" />
		<var type="data"    name="PREVIEWIMAGE" />
		<var type="data"    name="THUMBSIMAGE" />
		<var type="cdata"   name="XPLTHUMBS" />
		<var type="cdata"   name="BODYCSS" />
		<var type="data"    name="BODYSTYLE" />
		<var type="cdata"   name="XPLAIN" />
		<var type="cdata"   name="XPLAINSCRIPTS" />
		<var type="cdata"   name="XPLAININIT" />
		<var type="int"     name="CANVASWIDTH" />
		<var type="int"     name="CANVASHEIGHT" />
		<var type="int"     name="SLIDECOUNT" />
		<var type="bool"    name="AUDIOCONTROLS" />

		<var type="bool"    name="PLAYER_CONTROLS_ALWAYSVISIBLE" default="1" />
		<var type="opacity" name="PLAYER_CONTROLS_OPACITY" default="0.3" />

		<var type="int"     name="THUMBS_BORDERWIDTH" default="2" />
		<var type="color"   name="THUMBS_BORDERCOLOR" default="#FFFFFFFF" />
		<var type="int"     name="THUMBS_ACTIVE_BORDERWIDTH" default="2" />
		<var type="color"   name="THUMBS_ACTIVE_BORDERCOLOR" default="#FFFF0000" />
		
		<var type="calc" 	name="THUMBSWIDTH" default="70/<%SLIDECOUNT%>" />
		<var type="calc"    name="THUMBSHEIGHT" default="<%THUMBSWIDTH%>*<%CANVASHEIGHT%>/<%CANVASWIDTH%>" />
		<var type="calc"    name="THUMBSMAXHEIGHT" default="10*<%CANVASHEIGHT%>/<%CANVASWIDTH%>" />

		<var type="color"   name="BUTTON_AUDIO_MUTE_BACKGROUND" default="#FF555555" />
		<var type="color"   name="BUTTON_AUDIO_MUTE_FOREGROUND" default="#FFFFFFFF" />
		<var type="text"    name="BUTTON_AUDIO_MUTE_TEXT" default="Mute" />
		<var type="text"    name="BUTTON_AUDIO_UNMUTE_TEXT" default="Unmute" />
		<var type="text"    name="BUTTON_AUDIO_UNMUTE_INFO" default="Tap or click to unmute audio." />
		<var type="text"    name="BUTTON_AUDIO_VOLUME_TEXT" default="Volume" />
		
		<var type="display" name="BUTTON_SHARE_DISPLAY" default="block" />
		<var type="text"    name="BUTTON_SHARE_TEXT" default="Share" />
		<var type="percent" name="BUTTON_SHARE_SIZE" default="10" />
		<var type="color"   name="BUTTON_SHARE_COLOR" default="#FFFFFFFF" />
		<var type="display" name="BUTTON_SHARE_FACEBOOK" default="block" />
		<var type="text"    name="BUTTON_SHARE_FACEBOOK_TEXT" default="Share on Facebook" />
		<var type="display" name="BUTTON_SHARE_TWITTER" default="block" />
		<var type="text"    name="BUTTON_SHARE_TWITTER_TEXT" default="Share on Twitter" />
		<var type="display" name="BUTTON_SHARE_LINKEDIN" default="block" />
		<var type="text"    name="BUTTON_SHARE_LINKEDIN_TEXT" default="Share on LinkedIn" />
		<var type="display" name="BUTTON_SHARE_XING" default="none" />
		<var type="text"    name="BUTTON_SHARE_XING_TEXT" default="Share on Xing" />
		<var type="display" name="BUTTON_SHARE_EMAIL" default="block" />
		<var type="text"    name="BUTTON_SHARE_EMAIL_TEXT" default="Share by Email" />
		<var type="text"    name="BUTTON_ABOUTHELPXPLAIN_TEXT" default="Made with HelpXplain" />
		
		<var type="html"    name="FALLBACK_MESSAGE" default="We are sorry, but your browser does not support HelpXplain. Please use a decent browser and turn Javascript on." />
	</variables>
	
<htmlcode><![CDATA[<%DOCTYPE%>
<html>
<head>
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1, user-scalable=no" />
<meta name="apple-mobile-web-app-capable" content="yes" />
<title><%TITLE%></title>
<meta name="description" content="<%DESCRIPTION%>" />
<meta http-equiv="X-UA-Compatible" content="IE=edge" />
<%OPENGRAPH%>
<link rel="icon" href="<%FAVICON%>" type="image/png" />
<style type="text/css" media="screen">
<%BODYCSS%>

div#xplplayercontrols {
	width:100%;
	position:absolute;
	bottom:5vH;
	text-align:center;
	opacity: <%IF:PLAYER_CONTROLS_ALWAYSVISIBLE%><%PLAYER_CONTROLS_OPACITY%>;<%/IF:PLAYER_CONTROLS_ALWAYSVISIBLE%><%IFNOT:PLAYER_CONTROLS_ALWAYSVISIBLE%>0;<%/IFNOT:PLAYER_CONTROLS_ALWAYSVISIBLE%>
    transition: opacity 0.3s;
}
body:hover > div#xplplayercontrols {
	opacity: 1;
}
div#xplplayershare {
	position:fixed;
	right: 0;
	top: 0;
	width: <%BUTTON_SHARE_SIZE%>vH;
	height: <%BUTTON_SHARE_SIZE%>vH;
}
div#xplplayersharepopup {
	position:fixed;
	right: 0;
	top: <%BUTTON_SHARE_SIZE%>vH;
	width: auto;
	background: rgba(0,0,0,0.7);
	visibility: hidden;
	opacity: 0;
	transition: opacity 0.3s, visibility 0.3s;
}

div#xplplayershare:hover  {
	background: rgba(0,0,0,0.7);
}

div#xplplayershare:hover > div#xplplayersharepopup {
    visibility: visible;
    opacity: 1;
    transition: opacity 0.3s, visibility 0.3s;
}

div#xplplayersharepopup a {
	width: <%BUTTON_SHARE_SIZE%>vH;
	height: <%BUTTON_SHARE_SIZE%>vH;
	cursor: pointer;
}

div#xplplayercontrols svg {
	height:95%;
	width: auto;
	vertical-align: top;
}

div#xplplayercontrols path {
  fill: <%BUTTON_SHARE_COLOR%>;
  stroke: none;
}

div#xplthumbs div {
	display: inline-block;
	margin: 0;
	padding: 0;
	width: <%THUMBSWIDTH%>vW;
	height: <%THUMBSHEIGHT%>vW;
	max-width: 10vW;
	max-height: <%THUMBSMAXHEIGHT%>vW;
	background:url(<%THUMBSIMAGE%>);
	background-size: auto 100%;
	border: <%THUMBS_BORDERWIDTH%>px solid <%THUMBS_BORDERCOLOR%>;
	cursor:pointer;
}
div#xplthumbs div.active {
	border: <%THUMBS_ACTIVE_BORDERWIDTH%>px solid <%THUMBS_ACTIVE_BORDERCOLOR%>;
}
div#xplthumbs div:hover {
	border: <%THUMBS_ACTIVE_BORDERWIDTH%>px solid <%THUMBS_ACTIVE_BORDERCOLOR%>;
}
<%IF:AUDIOCONTROLS%>
div#xplplayeraudiocontrols {
	position: fixed;
	left: 0;
	bottom: 0;
	height: 32pt;
	width: 90pt;
	background: transparent;
	overflow: visible;
	z-index: 99;
}
div#xplplayeraudiocontrols path {
  fill: <%BUTTON_AUDIO_MUTE_FOREGROUND%>;
}
div#xplplayeraudiocontrols .audiobutton {
	position: absolute;
	display: block;
	left: 6pt;
	top: 0;
	height: 16pt;
	width: 16pt;
	background: <%BUTTON_AUDIO_MUTE_BACKGROUND%>;
	border: none;
	border-radius: 16pt;
	padding: 4pt;
}
div#xplplayeraudiocontrols path {
  fill: <%BUTTON_AUDIO_MUTE_FOREGROUND%>;
}
#xplplayeraudiocontrols div.audiobutton:hover {
	background: <%THUMBS_ACTIVE_BORDERCOLOR%>;
}
div#xplplayeraudiocontrols .disabled {
	display: none;
}
div#xplplayeraudioinfo {
	position: absolute;
	display: none;
	opacity: 0;
	left: 2pt;
	bottom: 42pt;
	width: 20vW;
	padding: 8pt;
	font-size: 14pt;
	line-height: 1.2em;
	text-align: center;
	background: <%BUTTON_AUDIO_MUTE_BACKGROUND%>;
	color: <%BUTTON_AUDIO_MUTE_FOREGROUND%>;
	border-radius: 5pt;
	box-shadow: 0 0 15px #c1c1c1;
	cursor: pointer;
}
div#xplplayeraudioinfo:before {
	content: "";
	position: absolute;
	width: 0;
	height: 0;
	left: 5pt;
	bottom: -25pt;
	border: 20px solid transparent;
	border-top: 22px solid <%BUTTON_AUDIO_MUTE_BACKGROUND%>;
}
#xplplayervolume {
	position: absolute;
	visibility: hidden;
	opacity: 0;
	top: 2pt;
	left: 38pt;
	height: 20pt;
	width: 50pt;
	padding: 0;
	vertical-align: middle;
	transition: opacity 0.3s, visibility 0.3s;
}
#xplplayervolume div.range {
	position: relative;
	left: 0;
	top: 40%;
	width: 100%;
	height: 20%; 
	background: #555555;
	overflow: visible;
}
#xplplayervolume div.bar {
	position: relative;
	width: 100%;
	height: 100%;
	background: #A0A0A0;
}
#xplplayervolume div.slider {
	position:absolute;
	left: 50px;
	top: 3.5pt;
	width: 10pt;
	height: 10pt;
	background: <%BUTTON_AUDIO_MUTE_FOREGROUND%>;
	border-radius: 6pt;
	border: 1pt solid #888888;
}
#xplplayervolume div.slider:hover {
	background: <%THUMBS_ACTIVE_BORDERCOLOR%>;
	border-color: #888888;
}
div#xplplayeraudiocontrols:hover > #xplplayervolume {
	visibility: visible;
	opacity: 1;
	transition: opacity 0.3s, visibility 0.3s;
}
<%/IF:AUDIOCONTROLS%>
div#xplplayerloading {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 20vH;
  height: 20vH;
  margin: -10vH 0 0 -10vH;
}
div#xplplayerloading.disabled {
  display: none;	
}
svg.xplspinner {
  animation: rotate 2s linear infinite;
  width: 100%;
  height: 100%;
}
svg.xplspinner > circle {
    stroke: <%THUMBS_ACTIVE_BORDERCOLOR%>;
    stroke-linecap: round;
    animation: dash 1.5s ease-in-out infinite;
}
@keyframes rotate {
  100% {
    transform: rotate(360deg);
  }
}
@keyframes dash {
  0% {
    stroke-dasharray: 1, 150;
    stroke-dashoffset: 0;
  }
  50% {
    stroke-dasharray: 90, 150;
    stroke-dashoffset: -35;
  }
  100% {
    stroke-dasharray: 90, 150;
    stroke-dashoffset: -124;
  }
}
div.fallback {
  position: absolute;
  top: 20%;
  background: #FFF;
  opacity: 0.9;
  font-size: 2em;
  padding: 1em;
  line-height: 1em
}
</style>
</head>
<body style="<%BODYSTYLE%>">
<%XPLAIN%>
<div id="xplplayerloading"><svg class="xplspinner" viewBox="0 0 50 50"><circle class="path" cx="25" cy="25" r="20" fill="none" stroke-width="5"></circle></svg></div>
<div id="xplplayercontrols" data-overlay="1">
<%XPLTHUMBS%>
<%IF:AUDIOCONTROLS%><div id="xplplayeraudiocontrols">
<div id="xplplayermute" class="audiobutton" title="<%BUTTON_AUDIO_MUTE_TEXT%>" onclick="xplain.enableaudio(false)">
