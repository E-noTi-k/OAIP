<%XPLAINSCRIPTS%>
<script>
<%XPLAININIT%>
xplain.enableloop(false); //start-replay does not auto-loop
xplain.addEventListener('onmoving', function (index, count) {
	if (index < count-1) {
		document.getElementById('xplplayerexit').style.display = 'none';
	}
});
xplain.addEventListener('onmoved', function (index, count) {
  if (index == count-1) {
	xplain.stop();
	var pbtn = document.getElementById('xplplayerplay');
	if (pbtn) pbtn.style.display = 'none';
	var replay = document.getElementById('xplplayerexit');
	if ((replay) && (replay.style.display != 'block')) {
		var t = new TimelineLite();
		t.fromTo(replay, 1, {opacity: 0.5}, {opacity: 1, display: 'block'}, xplain.slideDuration('last'));
	}
  }
});
</script>
<noscript><div style="margin: 0 auto; text-align:center">
<img src="<%PREVIEWIMAGE%>" style="width:100%" />
<div class="fallback"><%FALLBACK_MESSAGE%></div>
</div></noscript>
