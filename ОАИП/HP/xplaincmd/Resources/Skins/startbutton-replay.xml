<?xml version="1.0" encoding="UTF-8"?>
<xplainskin name="Start/Replay Skin" description="Large play button, replay button at last slide. This skin is ideal for screencasts running in autoplay mode.">
	<variables>
		<var type="cdata"   name="DOCTYPE" />
		<var type="data"    name="TITLE" />
		<var type="data"    name="DESCRIPTION" />
		<var type="cdata"   name="OPENGRAPH" />
		<var type="data"    name="FAVICON" />
		<var type="data"    name="PREVIEWIMAGE" />
		<var type="cdata"   name="BODYCSS" />
		<var type="data"    name="BODYSTYLE" />
		<var type="cdata"   name="XPLAIN" />
		<var type="cdata"   name="XPLAINSCRIPTS" />
		<var type="cdata"   name="XPLAININIT" />
		<var type="int"     name="CANVASWIDTH" />
		<var type="int"     name="CANVASHEIGHT" />
		<var type="bool"    name="AUDIOCONTROLS" />
	
		<var type="percent" name="PLAYER_PROGRESSBAR_HEIGHT" default="1" />
		<var type="color"   name="PLAYER_PROGRESSBAR_COLOR" default="#FF1072C5" />
		
		<var type="bool" 	name="BUTTON_PLAY_VISIBLE" default="1" />
		<var type="text"    name="BUTTON_PLAY_TEXT" default="Play Slideshow" />
		<var type="color"   name="BUTTON_PLAY_COLOR" default="#FFD80000" />
		<var type="text"    name="BUTTON_RELOAD_TEXT" default="Reload" />
		
		<var type="color"   name="BUTTON_AUDIO_MUTE_BACKGROUND" default="#FF555555" />
		<var type="color"   name="BUTTON_AUDIO_MUTE_FOREGROUND" default="#FFFFFFFF" />
		<var type="text"    name="BUTTON_AUDIO_MUTE_TEXT" default="Mute" />
		<var type="text"    name="BUTTON_AUDIO_UNMUTE_TEXT" default="Unmute" />
		<var type="text"    name="BUTTON_AUDIO_UNMUTE_INFO" default="Tap or click to unmute audio." />
		<var type="text"    name="BUTTON_AUDIO_VOLUME_TEXT" default="Volume" />
		
		<var type="bool"    name="BUTTON_SHARE" default="1" />
		<var type="text"    name="BUTTON_SHARE_TEXT" default="Share" />
		<var type="bool"    name="BUTTON_SHARE_FACEBOOK" default="1" />
		<var type="text"    name="BUTTON_SHARE_FACEBOOK_TEXT" default="Share on Facebook" />
		<var type="bool" 	name="BUTTON_SHARE_TWITTER" default="1" />
		<var type="text"    name="BUTTON_SHARE_TWITTER_TEXT" default="Share on Twitter" />
		<var type="bool" 	name="BUTTON_SHARE_LINKEDIN" default="1" />
		<var type="text"    name="BUTTON_SHARE_LINKEDIN_TEXT" default="Share on LinkedIn" />
		<var type="bool" 	name="BUTTON_SHARE_XING" default="0" />
		<var type="text"    name="BUTTON_SHARE_XING_TEXT" default="Share on Xing" />
		<var type="bool" 	name="BUTTON_SHARE_EMAIL" default="1" />
		<var type="text"    name="BUTTON_SHARE_EMAIL_TEXT" default="Share by Email" />
		<var type="text"    name="BUTTON_ABOUTHELPXPLAIN_TEXT" default="Made with HelpXplain" />
		
		<var type="html"    name="FALLBACK_MESSAGE" default="We are sorry, but your browser does not support HelpXplain. Please use a decent browser and turn Javascript on." />
	</variables>
	
<htmlcode><![CDATA[<%DOCTYPE%>
<html>
<head>
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1, user-scalable=no" />
<meta name="apple-mobile-web-app-capable" content="yes" />
<title><%TITLE%></title>
<meta name="description" content="<%DESCRIPTION%>" />
<meta http-equiv="X-UA-Compatible" content="IE=edge" />
<%OPENGRAPH%>
<link rel="icon" href="<%FAVICON%>" type="image/png" />
<style type="text/css" media="screen">
<%BODYCSS%>

div.fallback {
  position: absolute;
  top: 20%;
  background: #FFF;
  opacity: 0.9;
  font-size: 2em;
  padding: 1em;
  line-height: 1em
}

div#xplplayercontrols {
	position: fixed;
	bottom: 0;
	left: 0;
	width: 100%;
	height: <%PLAYER_PROGRESSBAR_HEIGHT%>vH;
	margin: 0;
	opacity: 1;
}
body:hover > div#xplplayercontrols {
	opacity: 1;
    transition: opacity 0.3s, visibility 0.3s;
}
div#xplplayerprogress {
	display: block;
}
div#xplplayerprogress div {
	position:absolute;
	top: 0;
	height: <%PLAYER_PROGRESSBAR_HEIGHT%>vH;
	width: 0%;
	background: <%PLAYER_PROGRESSBAR_COLOR%>;
}
div#xplplayercontrols .button {
	transition: transform 0.3s;
}
div#xplplayercontrols .button:hover {
  transform: scale(1.1,1.1);
}
div#xplplayercontrols .button.disabled {
	display: none;
}
div#xplplayercontrols svg {
	display: inline-block;
	width: 100%;
}
<%IF:AUDIOCONTROLS%>
div#xplplayeraudiocontrols {
	position: fixed;
	left: 0;
	bottom: 0;
	height: 32pt;
	width: 90pt;
	background: transparent;
	overflow: visible;
	z-index: 99;
}
div#xplplayeraudiocontrols svg {
	height:95%;
	width: auto;
	vertical-align: top;
}
div#xplplayeraudiocontrols path {
  fill: <%BUTTON_AUDIO_MUTE_FOREGROUND%>;
}
div#xplplayeraudiocontrols .audiobutton {
	position: absolute;
	display: block;
	left: 6pt;
	top: 0;
	height: 16pt;
	width: 16pt;
	background: <%BUTTON_AUDIO_MUTE_BACKGROUND%>;
	border: none;
	border-radius: 16pt;
	padding: 4pt;
}
#xplplayeraudiocontrols div.audiobutton:hover {
	background: <%BUTTON_PLAY_COLOR%>;
}
div#xplplayeraudiocontrols .disabled {
	display: none;
}
div#xplplayeraudioinfo {
	position: absolute;
	display: none;
	opacity: 0;
	left: 2pt;
	bottom: 42pt;
	width: 20vW;
	padding: 8pt;
	font-size: 14pt;
	line-height: 1.2em;
	text-align: center;
	background: <%BUTTON_AUDIO_MUTE_BACKGROUND%>;
	color: <%BUTTON_AUDIO_MUTE_FOREGROUND%>;
	border-radius: 5pt;
	box-shadow: 0 0 15px #c1c1c1;
	cursor: pointer;
}
div#xplplayeraudioinfo:before {
	content: "";
	position: absolute;
	width: 0;
	height: 0;
	left: 5pt;
	bottom: -25pt;
	border: 20px solid transparent;
	border-top: 22px solid <%BUTTON_AUDIO_MUTE_BACKGROUND%>;
}
#xplplayervolume {
	position: absolute;
	visibility: hidden;
	opacity: 0;
	top: 2pt;
	left: 38pt;
	height: 20pt;
	width: 50pt;
	padding: 0;
	vertical-align: middle;
	transition: opacity 0.3s, visibility 0.3s;
}
#xplplayervolume div.range {
	position: relative;
	left: 0;
	top: 40%;
	width: 100%;
	height: 20%; 
	background: #555555;
	overflow: visible;
}
#xplplayervolume div.bar {
	position: relative;
	width: 100%;
	height: 100%;
	background: #A0A0A0;
}
#xplplayervolume div.slider {
	position:absolute;
	left: 50px;
	top: 3.5pt;
	width: 10pt;
	height: 10pt;
	background: <%BUTTON_AUDIO_MUTE_FOREGROUND%>;
	border-radius: 6pt;
	border: 1pt solid #888888;
}
#xplplayervolume div.slider:hover {
	background: <%BUTTON_PLAY_COLOR%>;
	border-color: #888888;
}
div#xplplayeraudiocontrols:hover > #xplplayervolume {
	visibility: visible;
	opacity: 1;
	transition: opacity 0.3s, visibility 0.3s;
}
div#xplplayeraudiocontrols {
	opacity: 0.3;
    transition: opacity 0.3s;
}
#xplplayercontrols:hover > #xplplayeraudiocontrols {
	opacity: 1;
}
<%/IF:AUDIOCONTROLS%>
<%IF:BUTTON_PLAY_VISIBLE%>div#xplplayercontrols .xplplaybutton {
  fill: <%BUTTON_PLAY_COLOR%>;
  stroke: none;
}
div#xplplayerplay {
	margin: -60vH auto;
	width: 20vH;
	height: 20vH;
	cursor: pointer;
}<%/IF:BUTTON_PLAY_VISIBLE%>
div#xplplayerexit {
	display: none;
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;  
	background: rgba(0,0,0,0.8);
	text-align: center;
	color: #FFFFFF;
	text-decoration: none;
	font-size: 7vH;
}
div#xplplayerexit .exitbutton {
	margin:0;
	padding: 0px;
	opacity: 0.6;
    transition: opacity 0.3s, visibility 0.3s;
}
div#xplplayerexit .exitbutton:hover {
	opacity: 1;
}
div#xplplayerexit .replay {
	cursor: pointer;
}
div#xplplayerexit p {
	margin: 0 0 0.5em 0;
}
div#xplplayerexit div.replay svg {
	width: 2em;
	height: 2em;
}
a.sharebutton {
	display: inline-block;
	width: 1.5em;
	height: 1.5em;
	cursor: pointer;
}
div#xplplayerloading {
  position: fixed;
  top: 50%;
  left: 50%;
  width: 32vH;
  height: 32vH;
  margin: -16vH 0 0 -16vH;
}
div#xplplayerloading.disabled {
  display: none;	
}
svg.xplspinner {
  animation: rotate 2s linear infinite;
  width: 100%;
  height: 100%;
}
svg.xplspinner > circle {
    stroke: <%PLAYER_PROGRESSBAR_COLOR%>;
    stroke-linecap: round;
    animation: dash 1.5s ease-in-out infinite;
}
@keyframes rotate {
  100% {
    transform: rotate(360deg);
  }
}
@keyframes dash {
  0% {
    stroke-dasharray: 1, 150;
    stroke-dashoffset: 0;
  }
  50% {
    stroke-dasharray: 90, 150;
    stroke-dashoffset: -35;
  }
  100% {
    stroke-dasharray: 90, 150;
    stroke-dashoffset: -124;
  }
}
</style>
</head>
