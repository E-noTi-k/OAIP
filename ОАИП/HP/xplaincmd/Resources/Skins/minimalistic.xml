<?xml version="1.0" encoding="UTF-8"?>
<xplainskin name="Minimalistic Skin" description="Skin with only a previous and next button">
	<variables>
		<var type="cdata"   name="DOCTYPE" />
		<var type="data"    name="TITLE" />
		<var type="data"    name="DESCRIPTION" />
		<var type="cdata"   name="OPENGRAPH" />
		<var type="data"    name="FAVICON" />
		<var type="data"    name="PREVIEWIMAGE" />
		<var type="cdata"   name="BODYCSS" />
		<var type="data"    name="BODYSTYLE" />
		<var type="cdata"   name="XPLAIN" />
		<var type="cdata"   name="XPLAINSCRIPTS" />
		<var type="cdata"   name="XPLAININIT" />
		<var type="bool"    name="AUDIOCONTROLS" />
		
		<var type="bool"    name="PLAYER_CONTROLS_ALWAYSVISIBLE" default="0" />
		<var type="display" name="PLAYER_PROGRESSBAR_DISPLAY" default="none" />
		<var type="percent" name="PLAYER_PROGRESSBAR_HEIGHT" default="1" />
		<var type="color"   name="PLAYER_PROGRESSBAR_COLOR" default="#FF1072C5" />
		
		<var type="percent" name="PLAYER_BUTTON_WIDTH" default="5" />
		<var type="color"   name="PLAYER_BUTTON_BACKGROUND" default="#33000000" />
		<var type="color"   name="PLAYER_BUTTON_BACKGROUND_HOVER" default="#33000000" />
		<var type="int"     name="PLAYER_BUTTON_CORNERRADIUS" default="6" />
		<var type="color"   name="PLAYER_BUTTON_FILLCOLOR" default="#FFFFFFFF" />
		<var type="color"   name="PLAYER_BUTTON_STROKECOLOR" default="#00000000" />
		<var type="int"     name="PLAYER_BUTTON_STROKEWIDTH" default="0" />
		<var type="calc"    name="PLAYER_BUTTON_PADDING" default="<%PLAYER_BUTTON_WIDTH%>/5" />

		<var type="text"    name="BUTTON_PREVIOUS_TEXT" default="Previous Slide" />
		<var type="text"    name="BUTTON_NEXT_TEXT" default="Next Slide" />

		<var type="text"    name="BUTTON_AUDIO_MUTE_TEXT" default="Mute" />
		<var type="text"    name="BUTTON_AUDIO_UNMUTE_TEXT" default="Unmute" />
		<var type="text"    name="BUTTON_AUDIO_UNMUTE_INFO" default="Tap or click to unmute audio." />
		<var type="text"    name="BUTTON_AUDIO_VOLUME_TEXT" default="Volume" />
		
		<var type="html"    name="FALLBACK_MESSAGE" default="We are sorry, but your browser does not support HelpXplain. Please use a decent browser and turn Javascript on." />
	</variables>
	
<htmlcode><![CDATA[<%DOCTYPE%>
<html>
<head>
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1, user-scalable=no" />
<meta name="apple-mobile-web-app-capable" content="yes" />
<title><%TITLE%></title>
<meta name="description" content="<%DESCRIPTION%>" />
<meta http-equiv="X-UA-Compatible" content="IE=edge" />
<%OPENGRAPH%><link rel="icon" href="<%FAVICON%>" type="image/png" />
<style type="text/css" media="screen">
<%BODYCSS%>

div.fallback {
  position: absolute;
  top: 20%;
  background: #FFF;
  opacity: 0.9;
  font-size: 2em;
  padding: 1em;
  line-height: 1em
}

div#xplplayercontrols {
	position: fixed;
	overflow: visible;
	<%IF:AUDIOCONTROLS%>bottom: 24pt;<%/IF:AUDIOCONTROLS%><%IFNOT:AUDIOCONTROLS%>bottom: 0;<%/IFNOT:AUDIOCONTROLS%>
	left: 0;
	width: 100%;
	height: <%PLAYER_PROGRESSBAR_HEIGHT%>vH;
	background: none;
	opacity: 1;
	margin: 0;
	overflow: visible;
	vertical-align: middle;
	opacity: <%PLAYER_CONTROLS_ALWAYSVISIBLE%>;
    transition: opacity 0.3s, visibility 0.3s;
}
body:hover > div#xplplayercontrols {
	opacity: 1;
    transition: opacity 0.3s, visibility 0.3s;
}
div#xplplayerprogress {
	display: <%PLAYER_PROGRESSBAR_DISPLAY%>;
}
div#xplplayerprogress div {
	height: <%PLAYER_PROGRESSBAR_HEIGHT%>vH;
	width: 0%;
	background: <%PLAYER_PROGRESSBAR_COLOR%>;
}
div#xplplayercontrols .button {
  position: absolute;
  top: -99vH;
  text-decoration: none;
  width: <%PLAYER_BUTTON_WIDTH%>%;
  height: 100vH;
  background: <%PLAYER_BUTTON_BACKGROUND%>;
  opacity: 0.5;
  cursor: pointer;
  padding: <%PLAYER_BUTTON_PADDING%>vH;
  line-height: 100vH;
  vertical-align: middle;
}
div#xplplayerprev {
	left: 0;
	border-radius: 0 <%PLAYER_BUTTON_CORNERRADIUS%>px <%PLAYER_BUTTON_CORNERRADIUS%>px 0;
}
div#xplplayernext {
	right: 0;
	border-radius: <%PLAYER_BUTTON_CORNERRADIUS%>px 0 0 <%PLAYER_BUTTON_CORNERRADIUS%>px;
}

div#xplplayercontrols .disabled {
	display: none;
}

div#xplplayercontrols .button:hover {
  opacity: 1;
  background: <%PLAYER_BUTTON_BACKGROUND_HOVER%>;
}
div#xplplayercontrols .disabled:hover {
  opacity: 0.1;
}
div#xplplayercontrols svg {
	display: inline-block;
	width: 100%;
}

div#xplplayercontrols path {
  fill: <%PLAYER_BUTTON_FILLCOLOR%>;
  stroke: <%PLAYER_BUTTON_STROKECOLOR%>;
  stroke-width: <%PLAYER_BUTTON_STROKEWIDTH%>px;
}
<%IF:AUDIOCONTROLS%>
div#xplplayeraudiocontrols {
	position: fixed;
	left: 0;
	bottom: 0;
	height: 24pt;
	width: 100%;
	z-index: 99;
	background: <%PLAYER_BUTTON_BACKGROUND_HOVER%>;
}
div#xplplayeraudiocontrols .audiobutton {
	position: absolute;
	left: 8pt;
	top: 2pt;
	height: 18pt;
	width: 18pt;
}
div#xplplayeraudioinfo {
	position: absolute;
	display: none;
	opacity: 0;
	left: 4pt;
	bottom: 38pt;
	width: 20vW;
	padding: 8pt;
	font-size: 14pt;
	line-height: 1.2em;
	text-align: center;
	background: #555555;
	color: #FFFFFF;
	border-radius: 5pt;
	box-shadow: 0 0 15px #c1c1c1;
	cursor: pointer;
}
div#xplplayeraudioinfo:before {
	content: "";
	position: absolute;
	width: 0;
	height: 0;
	left: 5pt;
	bottom: -25pt;
	border: 20px solid transparent;
	border-top: 22px solid #555555;
}
#xplplayervolume {
	position: absolute;
	top: 2pt;
	left: 36pt;
	height: 20pt;
	width: 50pt;
	padding: 0;
	vertical-align: middle;
}
#xplplayervolume div.range {
	position: relative;
	left: 0;
	top: 40%;
	width: 100%;
	height: 20%; 
	background: #555555;
	overflow: visible;
}
#xplplayervolume div.bar {
	position: relative;
	width: 100%;
	height: 100%;
	background: #A0A0A0;
}
#xplplayervolume div.slider {
	position:absolute;
	left: 50px;
	top: 3.5pt;
	width: 10pt;
	height: 10pt;
	background: <%PLAYER_BUTTON_FILLCOLOR%>;
	border-radius: 6pt;
	border: 1pt solid <%PLAYER_BUTTON_FILLCOLOR%>;
}
#xplplayervolume div.slider:hover {
	background: <%PLAYER_BUTTON_FILLCOLOR%>;
	border-color: <%PLAYER_BUTTON_STROKECOLOR%>;
}
#xplplayeraudiocontrols svg {
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
}
<%/IF:AUDIOCONTROLS%>
div#xplplayerloading {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 20vH;
  height: 20vH;
  margin: -10vH 0 0 -10vH;
}
div#xplplayerloading.disabled {
  display: none;	
}
svg.xplspinner {
  animation: rotate 2s linear infinite;
  width: 100%;
  height: 100%;
}
svg.xplspinner > circle {
    stroke: <%PLAYER_PROGRESSBAR_COLOR%>;
    stroke-linecap: round;
    animation: dash 1.5s ease-in-out infinite;
}
@keyframes rotate {
  100% {
    transform: rotate(360deg);
  }
}
@keyframes dash {
  0% {
    stroke-dasharray: 1, 150;
    stroke-dashoffset: 0;
  }
  50% {
    stroke-dasharray: 90, 150;
    stroke-dashoffset: -35;
  }
  100% {
    stroke-dasharray: 90, 150;
    stroke-dashoffset: -124;
  }
}
</style>
</head>
<body style="<%BODYSTYLE%>">
<%XPLAIN%>
<div id="xplplayerloading"><svg class="xplspinner" viewBox="0 0 50 50"><circle class="path" cx="25" cy="25" r="20" fill="none" stroke-width="5"></circle></svg></div>
<div id="xplplayercontrols" data-overlay="1">
<div id="xplplayerprogress"><div id="xplplayerprogressindicator"></div></div>
<%IF:AUDIOCONTROLS%><div id="xplplayeraudiocontrols">
<div id="xplplayermute" class="audiobutton" title="<%BUTTON_AUDIO_MUTE_TEXT%>" onclick="xplain.enableaudio(false)">
